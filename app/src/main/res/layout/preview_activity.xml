<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    style="@android:style/Theme.InputMethod">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/previewVideo" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:drawable/ic_menu_share"
        android:id="@+id/previewShare"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="@+id/previewDelete"
        android:layout_alignBottom="@+id/previewDelete"
        android:layout_alignEnd="@+id/previewVideo" />

    <Button
        android:background="@android:drawable/ic_menu_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:id="@+id/previewDelete"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:id="@+id/dateText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>